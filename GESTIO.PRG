		m.folio=replicate('0',4-len(alltrim(str(val(folio)+1))))+        alltrim(str(val(folio)+1))
        m.finrec=date()
        m.hora = time()
	CASE m.paction = 'SAVE'
		INSERT INTO (ALIAS()) FROM MEMVAR
	CASE m.paction = 'CANCEL'
		* nothing here
	ENDCASE
RETURN

